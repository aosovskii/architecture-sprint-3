@startuml
!pragma layout smetana
!includeurl https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Context.puml

title Система Управления Отоплением (Диаграмма Контекста)

Person(user, "Пользователь", "Житель дома, использующий систему для управления отоплением")

System_Boundary(company_system, "Система Управления Отоплением") {
    System(server, "Сервер Управления", "Монолитное Java-приложение", "Обеспечивает управление отоплением и обработку данных о температуре")
    System_Ext(sensor, "Датчик Температуры", "Устройство для измерения температуры", "Передает температуру по запросу")
    System_Ext(heating_system, "Система Отопления", "Отопительное оборудование", "Получает команды от сервера")
}

Rel(user, server, "Управляет отоплением и проверяет температуру через интерфейс")
Rel(server, sensor, "Запрашивает данные о температуре")
Rel(server, heating_system, "Передает команды для управления отоплением")

@enduml
